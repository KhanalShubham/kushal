<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7000BCD4"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/textview"
        android:layout_width="346dp"
        android:layout_height="53dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:text="Kids Zone App"
        android:fontFamily="cursive"
        android:textAlignment="center"
        android:textColor="#048FA1"
        android:textSize="38sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="341dp"
        android:layout_height="85dp"
        android:fontFamily="cursive"
        android:text="Top Picks for Your Babies. Explore Now!"
        android:textAlignment="center"
        android:textColor="#FC8BC5"
        android:textSize="33sp"
        android:textStyle="bold"
        android:layout_marginTop="34dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview" />

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="400dp"
        android:layout_height="349dp"
        android:src="@drawable/adorable"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_LOGIN"
        style="@android:style/Widget.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        app:backgroundTint="@null"
        android:text="LOGIN"
        android:textColor="#009688"
        android:backgroundTint="#FDE87F"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoImageView"
        android:background="@drawable/button_background"/>

    <Button
        android:id="@+id/btn_SIGNUP"
        style="@android:style/Widget.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_LOGIN"
        android:text="SIGNUP"
        android:textSize="24sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="32dp"
        app:backgroundTint="#FC8BC5"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_background"
        />
</androidx.constraintlayout.widget.ConstraintLayout>